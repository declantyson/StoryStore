<% provide(:title, 'Music') %>

<h1>Listing musics</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Project</th>
    <th>Artist</th>
    <th>Spotify uri</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @musics.each do |music| %>
  <tr>
    <td><%= music.title %></td>
    <td><%= music.project_id %></td>
    <td><%= music.artist %></td>
    <td><%= music.spotify_uri %></td>
    <td><%= link_to 'Show', music %></td>
    <td><%= link_to 'Edit', edit_music_path(music) %></td>
    <td><%= link_to 'Destroy', music, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Music', new_music_path %>
