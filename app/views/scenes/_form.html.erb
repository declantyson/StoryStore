
<%= form_for(@scene) do |f| %>
  <% if @scene.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@scene.errors.count, "error") %> prohibited this scene from being saved:</h2>

      <ul>
      <% @scene.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<br>
  <div class="field">
    <%= f.text_field :name, class: "title-input" %>
  </div>
	<div class="field">
	  <%= f.label :image %>
	  <p style="font-size: 10px;margin: 0;line-height: 10px;color:#9b1031;">Recommended minimum size: 165x165px</p>
	  <%= f.file_field :image %>
	</div>
  <div class="field">
    <%= f.hidden_field :project_id, value: params[:pid] %>
  </div>
  <div class="field entry-field">
    <a class="btn edit-entry">Edit in larger view</a>
    <%= f.text_area :entry, class: "redactor", id: "scene_writer" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn large-btn btn-primary"  %>
  </div>
<% end %>
