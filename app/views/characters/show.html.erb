<% provide(:title, @character.name) %>

<p id="notice"><%= notice %></p>

<h1 class="frame-title">
  <%= @character.name %>
</h1>
<hr/>

<%= image_tag @character.image.url, class: "frame-image" %>

<p class="personality">
  <%= @character.personality %>
</p>

<p class="quotes" style="font-style:italic;">
  "<%= @character.quotes %>"
</p>

