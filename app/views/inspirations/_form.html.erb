<% action = @inspiration.new_record? ? "create" : "update" %>
<%= form_for(@inspiration, :url => { :action => action, :pid => params[:pid] }) do |f| %>
  <% if @inspiration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@inspiration.errors.count, "error") %> prohibited this inspiration from being saved:</h2>

      <ul>
      <% @inspiration.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="pro-avatar">
    <img src="<%= @inspiration.image.url %>" alt=''/>
  </div>
  <div class="form">
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :image %>
      <p style="font-size: 10px;margin: 0;line-height: 10px;color:#9b1031;">Recommended minimum size: 165x165px</p>
      <%= f.file_field :image %>
    </div>
    <div class="field">
      <%= f.hidden_field :project_id, value: params[:pid] %>
    </div>
    <div class="actions">
      <%= f.submit class: "btn large-btn btn-primary" %>
    </div>
  </div>
  <div class="clearfix"></div>
<% end %>
